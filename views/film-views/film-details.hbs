<article id="film-details" class="row">
    {{#with filmFromAPI}}
        <div class="col">
            <img src="{{poster_image.image_files.6.url}}" alt="{{slug}}">
            <h4><span class="big">{{title}}</span> <i class="far fa-heart"></i></h4>
            <h5>directed by: <span class="big">{{crew.0.name}}</span> </h5>          
        </div>
        <div class="col">
            <p>
                {{#each genres}}
                    <a class="genre" href="">{{this.name}}</a>
                {{/each}}
            </p>
            <p><b>Synopsis:</b>  {{synopsis}}</p>
            <div class="cast">
                <b>Cast:</b> 
                <ul>
                {{#each cast}}
                    <li><span class="big">{{this.name}}</span> as <span class="big">{{this.character}}</span></li>
                {{/each}}    
                </ul>
            </div>
        </div>
    {{/with}}
</article>

{{!-- film api should have the location and language stuff --}}

<h3>Comments:</h3>
           

    <ul>{{#each filmFromDbWithComments}}
        <li>
            <p>{{this.username}}</p>
            <p>{{this.content}}</p>
           {{#if isUserName}}
               <form action="{{filmId}}/edit" method="get">
                   <button type="submit"> edit</button>
               </form>
               <form action="{{id}}/delete/{{filmId}}" method="post">
                   <button type="submit">delete</button>
               </form>
            {{/if}}

            </li>
        {{/each}}
    </ul>

<form action="/films/{{filmFromAPI.id}}" method="post" name="comment-form" style="padding-bottom: 100px;">
